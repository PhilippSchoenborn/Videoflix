# ========================================
# DIRECT SMTP CONFIGURATION (PRODUCTION)
# For real email delivery via email provider
# ========================================

# Database Configuration
DB_NAME=videoflix_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# URLs for Email Verification
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# EMAIL DIRECT SMTP CONFIGURATION
# =====================================
# IMPORTANT: These settings are for real email delivery!
# Uncomment the desired option:

# GMAIL SMTP (recommended for private projects)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-password  # App-Password, not regular Gmail password!
DEFAULT_FROM_EMAIL=your-gmail@gmail.com

# OUTLOOK/HOTMAIL SMTP (alternative)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-outlook@outlook.com
# EMAIL_HOST_PASSWORD=your-outlook-password
# DEFAULT_FROM_EMAIL=your-outlook@outlook.com

# E-MAIL ALLGEMEINE EINSTELLUNGEN
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Security Settings
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

