# ========================================
# VIDEOFLIX BACKEND CONFIGURATION
# Production/Development Environment Setup
# ========================================

# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (PostgreSQL)
POSTGRES_DB=videoflix
POSTGRES_USER=videoflix
POSTGRES_PASSWORD=videoflix
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Legacy Database Settings (for compatibility)
DB_NAME=videoflix
DB_USER=videoflix
DB_PASSWORD=videoflix
DB_HOST=db
DB_PORT=5432

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# EMAIL SMTP CONFIGURATION
# =====================================
# IMPORTANT: For real email delivery!

# GMAIL SMTP (recommended)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-password  # App-Password, not regular Gmail password!
DEFAULT_FROM_EMAIL=your-gmail@gmail.com

# OUTLOOK/HOTMAIL SMTP (alternative)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-outlook@outlook.com
# EMAIL_HOST_PASSWORD=your-outlook-password
# DEFAULT_FROM_EMAIL=your-outlook@outlook.com

# Email Security Settings
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Admin User Configuration
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# ========================================
# SETUP INSTRUCTIONS FOR REAL EMAILS:
# ========================================
# 
# 1. FOR GMAIL:
#    - Go to Google Account Settings
#    - Enable 2-Factor Authentication 
#    - Create an "App Password" for this application
#    - Use the App Password as EMAIL_HOST_PASSWORD
